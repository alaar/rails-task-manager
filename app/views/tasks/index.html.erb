<h1>Tasks</h1>


<form action="" method="get">
  <% @tasks.each do |task| %>
    <% if task.completed %>
      <input type="checkbox" name="task" value=<%= task.title %> checked="checked"><%= link_to task.title, task_path(task) %><br>
    <% else %>
      <input type="checkbox" name="task" value=<%= task.title %>><%= link_to task.title, edit_task_path(task) %><br>
    <% end %>
  <% end %>
</form>

<br>
<%= link_to "+ Add new task", new_task_path %>
